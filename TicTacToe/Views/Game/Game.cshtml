@{
    string mode = "no mode";
    int? data = ViewData["mode"] as int?;
    if (data.HasValue) // Check if data has a value
    {
        if (data == 1)
        {
            mode = "Single";
        }
        else if (data == 2)
        {
            mode = "Two Players";
        }
    }
}
<section>
    <h2>This is a @mode</h2>
    <div class="board-mode">
        <button>1</button>
        <button>2</button>
        <button>3</button>
    </div>
    <div class="board">
        <button></button>
        <button></button>
        <button></button>
        <button></button>
        <button></button>
        <button></button>
        <button></button>
        <button></button>
        <button></button>
    </div>
</section>

<script>
    alert(@mode);
</script>